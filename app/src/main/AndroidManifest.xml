<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dicoding.orderfoodapp">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_sushi_order_app"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_sushi_order_app"
        android:supportsRtl="true"
        android:theme="@style/Theme.OrderFoodApp">
        <activity android:name=".AboutActivity"></activity>
        <activity android:name=".FoodMenuDetailActivity" />
        <activity android:name=".FoodMenuActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>